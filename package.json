{
  "name": "pethreon",
  "private": true,
  "version": "0.1.0",
  "packageManager": "yarn@3.1.1",
  "license": "MIT",
  "homepage": "https://chris56974.github.io/Pethreon/",
  "repository": "github:Chris56974/Pethreon",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "yarn workspace backend run typechain",
    "dev": "yarn workspaces foreach -pi run dev",
    "backend:dev": "yarn workspace backend run dev",
    "frontend:dev": "yarn workspace frontend run dev",
    "deploy": "yarn workspace backend run deploy",
    "deploy:localhost": "yarn workspace backend run deploy:localhost",
    "deploy:rinkeby": "yarn workspace backend run deploy:rinkeby",
    "build": "yarn workspaces foreach run build",
    "build:backend": "yarn workspace backend run build",
    "build:frontend": "yarn workspace frontend run build",
    "test": "yarn workspaces foreach -pi run test",
    "test:backend": "yarn workspace backend run test",
    "test:frontend": "yarn workspace frontend run test"
  }
}
