{
  "name": "pethreon",
  "version": "0.1.0",
  "packageManager": "yarn@3.1.1",
  "license": "MIT",
  "repository": "github:Chris56974/Pethreon",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "yarn workspace @pethreon/backend typechain",
    "dev": "yarn workspaces foreach -pi dev",
    "dev:backend": "yarn workspace @pethreon/backend dev",
    "dev:frontend": "yarn workspace @pethreon/frontend run dev",
    "build": "yarn workspaces foreach run build",
    "build:backend": "yarn workspace @pethreon/backend run build",
    "build:frontend": "yarn workspace @pethreon/frontend run build",
    "test": "yarn workspaces foreach -pi run test",
    "test:backend": "yarn workspace @pethreon/backend run test",
    "test:frontend": "yarn workspace @pethreon/frontend run test",
    "deploy": "yarn workspace backend run deploy",
    "deploy:localhost": "yarn workspace @pethreon/backend run deploy:localhost",
    "deploy:rinkeby": "yarn workspace @pethreon/backend run deploy:rinkeby"
  }
}
