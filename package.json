{
  "name": "pethreon",
  "scripts": {
    "preinstall": "npx only-allow npm",
    "postinstall": "pushd ./frontend && pnpm install && popd",
    "dev": "pushd ./frontend && pnpm dev && popd",
    "fbuild": "pushd ./frontend && pnpm build && popd",
    "fpreview": "pushd ./frontend && pnpm preview && popd",
    "build": "npm run clean && npm run compile",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "coverage": "npm run build && npx hardhat coverage --temp artifacts --network coverage"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "hardhat": "^2.12.4"
  }
}